<mvc:View controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m" xmlns="sap.uxap"
    xmlns:layout="sap.ui.layout">
    <m:Page id="page" title="{i18n>title}">
         <ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
        
        <!-- Object Page Header -->
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{/ASOPNumber}" wrapping="true"/>
                </expandedHeading>

                <snappedHeading>
                    <m:FlexBox fitContainer="true" alignItems="Center">
                        <m:Avatar src="sap-icon://document" backgroundColor="Accent6" class="sapUiTinyMarginEnd"/>
                        <m:Title text="{/ASOPNumber}" wrapping="true" />
                    </m:FlexBox>
                </snappedHeading>

                <expandedContent>
                    <m:Text text="{/DocumentType}"/>
                </expandedContent>

                <snappedContent>
                    <m:Text text="{/DocumentType}"/>
                </snappedContent>

                <actions>
                    <m:Button text="Edit" type="Emphasized"/>
                    <m:Button type="Transparent" text="Delete"/>
                    <m:Button type="Transparent" text="Copy"/>
                    <m:OverflowToolbarButton icon="sap-icon://action" type="Transparent" text="Share" tooltip="action"/>
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox wrap="Wrap">
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="Order Amount" text="{/OrderAmount}"/>
                    <m:ObjectStatus title="Currency" text="{/Currency}"/>
                    <m:ObjectStatus title="Bill-To" text="{/BillTo}"/>
                    <m:ObjectStatus title="Ship-To" text="{/ShipTo}"/>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="Sold-To Party" text="{/SoldTo}"/>
                    <m:ObjectStatus title="Incoterms" text="{/Incoterms}"/>
                    <m:ObjectStatus title="Payment Terms" text="{/PaymentTerms}"/>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:ObjectStatus title="Delivery Date" text="{/DeliveryDate}"/>
                    <m:ObjectStatus title="Status" text="{/Status}" state="Warning"/>
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <!-- Tabs Section -->
        <sections>
            <ObjectPageSection title="Sales Order Details">
                <subSections>
                    <ObjectPageSubSection title="Details">
                        <blocks>
                            <m:IconTabBar expandable="false">
                                <m:items>
                                    <m:IconTabFilter text="Sales Order Data 1" key="data1" icon="sap-icon://order-status">
                                        <m:VBox>
                                            <m:Label text="Sales Organization"/>
                                            <m:Text text="{/SalesOrganization}"/>

                                            <m:Label text="Distribution Channel"/>
                                            <m:Text text="{/DistributionChannel}"/>

                                            <m:Label text="Division"/>
                                            <m:Text text="{/Division}"/>
                                        </m:VBox>
                                    </m:IconTabFilter>

                                    <m:IconTabFilter text="Sales Order Data 2" key="data2" icon="sap-icon://business-card">
                                        <m:VBox>
                                            <m:Label text="Sold-To Party"/>
                                            <m:Text text="{/SoldTo}"/>

                                            <m:Label text="Ship-To Party"/>
                                            <m:Text text="{/ShipTo}"/>

                                            <m:Label text="Customer PO Number"/>
                                            <m:Text text="{/CustomerPONumber}"/>
                                        </m:VBox>
                                    </m:IconTabFilter>

                                    <m:IconTabFilter text="Status" key="status" icon="sap-icon://status-critical">
                                        <m:VBox>
                                            <m:Label text="Status"/>
                                            <m:Text text="{/Status}"/>

                                            <m:Label text="Incoterms 1"/>
                                            <m:Text text="{/Incoterms}"/>

                                            <m:Label text="Incoterms 2"/>
                                            <m:Text text="{/Incoterms2}"/>
                                        </m:VBox>
                                    </m:IconTabFilter>

                                    <m:IconTabFilter text="Additional Data" key="additional" icon="sap-icon://add">
                                        <m:VBox>
                                            <m:Label text="Additional Notes"/>
                                            <m:Text text="{/AdditionalNotes}"/>
                                        </m:VBox>
                                    </m:IconTabFilter>
                                </m:items>
                            </m:IconTabBar>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
    </m:Page>
</mvc:View>